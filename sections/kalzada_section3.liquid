<section class="Section3" id="Section3">
    <div id="sec3menu">
        <p id="sec3menu1"><a href="#">LATEST PRODUCTS</a></p>
        <p id="sec3menu2"><a href="#">TOP RATING</a></p>
        <p id="sec3menu3"><a href="#">ON SALE</a></p>
    </div>
</section>
<section class="Section32" id="Section32">
    <div id="sec3prd">

        {% for product in collections.all.products %}
            {% for collection in product.collections %}
              {% if collection.title == 'new' %} 
                <div class="prdsDiv">
                    <div class="prds">
                        <div class="tagsCont">
                            <div class="discountCont">
                                <p class="discount">-10%</p>
                            </div>
                            <div class="collectionCont">
                                <p class="collection">NEW</p>
                            </div>
                        </div>
                        <div class="imgCont">
                            <img class="prodImg" src="{{product.featured_image|image_url:medium}}" alt="products"WW/>
                        </div>
                    </div>
                    <div class="prdsNameCont">
                        <p id="prodName">{{ product.title }}</p>
                    </div>
                    <div class="starsCont">
                        <div id="stars">
                            <span class="fa fa-star checked fa-xs"></span>
                            <span class="fa fa-star checked fa-xs"></span>
                            <span class="fa fa-star checked fa-xs"></span>
                            <span class="fa fa-star checked fa-xs"></span>
                            <span class="fa fa-star checked fa-xs"></span>
                        </div>
                    </div>
                    <div id="sec2price">
                        <span id="sec2paper2">{{ product.price|money}}&nbsp;</span><span id="sec2paper2g">{{ product.compare_at_price|money}}</span>
                    </div>
                </div>
            {% endif %}
        {% endfor %} 
     {% endfor %}
        

        

    </div>
</section>
<section class="Section33" id="Section33">
    <button class="bnwButton2">VIEW ALL PRODUCTS</button>
</section>

