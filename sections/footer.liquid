    color: #FFFFFF;
  }

  .footSec2 a{
    font-family: 'Montserrat';
    font-style: normal;
    font-weight: 200;
    font-size: 14px;
    text-decoration:none;
    margin-bottom:15px;
    text-transform: uppercase;

    color: #FFFFFF;

  }

  #footerTxt5{
    font-family: 'Gotham';
    font-style: normal;
    font-weight: 700;
    font-size: 20px;

    letter-spacing: 0.01em;
    text-transform: uppercase;

    color: #FFFFFF;
  }

  #footerTxt6{
    font-family: 'Montserrat';
    font-style: normal;
    font-weight: 500;
    font-size: 14px;
    color: #FFFFFF;

    opacity: 0.78;
  }

  #footemail{
    width: 205px;
    height: 35px;

    background: #F4F6F5;
    border: 1px solid #D0D0D0;
    padding:5px;
  }

  #footsubmitbtn{
    font-family: 'Montserrat';
    font-style: normal;
    font-weight: 700;
    font-size: 13px;

    text-transform: uppercase;

    color: #121212;

    width: 123px;
    height: 35px;

    background: #DDDDDD;
  }

  .mapImg{
    margin-top:20px;
  }

  #footerTxt7{
    font-family: 'Montserrat';
    font-style: normal;
    font-weight: 700;
    font-size: 20px;
    letter-spacing: 0.01em;
  }
